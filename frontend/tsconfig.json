{
  "compilerOptions": {
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": false,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "react",
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es2017", "dom", "esnext"],
    "resolveJsonModule": true,
    "composite": false,
    "declaration": false,
    "outDir": "./build",
    "baseUrl": ".",
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["**/*.fixture.*"]
}
